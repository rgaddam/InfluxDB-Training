var polutants = stream
  |from()
    .database('air_data')
    .retentionPolicy('24_hour')
    .measurement('polutants')
  |window()
   .period(1m)
   .every(1m)
   .align()
  |mean('lead')
   .as('lead')
  |alert()
  .info(lambda: "lead" > 30)
  .warn(lambda: "lead" > 50)
  .crit(lambda: "lead" > 70)
  .log('/tmp/3a.log')
